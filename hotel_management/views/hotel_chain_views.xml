<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View hotel.chain View Tree -->
    <record id="view_hotel_chain_tree" model="ir.ui.view">
        <field name="name">view.hotel.chain.tree</field>
        <field name="model">hotel.chain</field>
        <field name="arch" type="xml">
            <tree string="Hotel Hotel">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- View hotel.chain form -->
    <record id="view_hotel_chain_form" model="ir.ui.view">
        <field name="name">view.hotel.chain.form</field>
        <field name="model">hotel.chain</field>
        <field name="arch" type="xml">
            <form string="Hotel Hotel">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Nombre de la cadena Hotelera..."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View hotel.chain search -->
    <record id="view_hotel_chain_search" model="ir.ui.view">
        <field name="name">view.hotel.chain.search</field>
        <field name="model">hotel.chain</field>
        <field name="arch" type="xml">
            <search string="Cadena Hotelera">
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action hotel.chain -->
    <record id="action_hotel_chain" model="ir.actions.act_window">
        <field name="name">Cadena Hotelera</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hotel.chain</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                No se han registrado datos de ninguna Cadena Hotelera.
            </p>
        </field>
    </record>
    <!-- Menu hotel.chain -->
    <menuitem id="menu_hotel_chain" name="Cadena Hotelera" action="action_hotel_chain" parent="menu_hotel_room" sequence="1"/>
</odoo>
