<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- View hotel.facility View Tree -->
    <record id="view_hotel_facility_tree" model="ir.ui.view">
        <field name="name">view.hotel.facility.tree</field>
        <field name="model">hotel.facility</field>
        <field name="arch" type="xml">
            <tree string="Hotel Facility">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- View hotel.facility form -->
    <record id="view_hotel_facility_form" model="ir.ui.view">
        <field name="name">view.hotel.facility.form</field>
        <field name="model">hotel.facility</field>
        <field name="arch" type="xml">
            <form string="Hotel Facility">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Nombre..."/>
                        </h1>
                        <label for="number_of_stars"/>
                        <h1>
                            <field name="number_of_stars" placeholder="Cantidad de Estrellas.."/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View hotel.facility search -->
    <record id="view_hotel_facility_search" model="ir.ui.view">
        <field name="name">view.hotel.facility.search</field>
        <field name="model">hotel.facility</field>
        <field name="arch" type="xml">
            <search string="Hotel Facility">
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action hotel.facility -->
    <record id="action_hotel_facility" model="ir.actions.act_window">
        <field name="name">Hotel Facility</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hotel.facility</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                No se han registrado datos de ningun Nombre de Instalación Hotelera.
            </p>
        </field>
    </record>
    <menuitem id="menu_hotel_facility" name="Instalación del Hotel" action="action_hotel_facility" parent="menu_hotel_room" sequence="2"/>

</odoo>
